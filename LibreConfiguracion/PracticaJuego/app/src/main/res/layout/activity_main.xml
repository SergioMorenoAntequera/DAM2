<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo2">

    <TextView
        android:id="@+id/tvDanio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:text="@string/tvDanio"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ivEspada"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="48dp"
        android:text="@string/tvDinero"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ivDinero"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDinero"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coins" />

    <ImageView
        android:id="@+id/ivDiablo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivArbol"
        app:srcCompat="@drawable/diablo" />

    <ImageView
        android:id="@+id/ivArbol"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="69dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivEspada"
        app:srcCompat="@drawable/arbol"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/ivZombie"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDiablo"
        app:srcCompat="@drawable/frankenstein" />

    <Button
        android:id="@+id/bArbol"
        android:layout_width="88dp"
        android:layout_height="72dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/swords"
        android:text="@string/bDesfiar"
        android:textColor="@android:color/holo_red_dark"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bMejorar" />

    <Button
        android:id="@+id/bDiablo"
        android:layout_width="88dp"
        android:layout_height="72dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/swords"
        android:text="@string/bDesfiar"
        android:textColor="@android:color/holo_red_dark"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bArbol" />

    <Button
        android:id="@+id/bZombie"
        android:layout_width="88dp"
        android:layout_height="72dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/swords"
        android:text="@string/bDesfiar"
        android:textColor="@android:color/holo_red_dark"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bDiablo" />

    <Button
        android:id="@+id/bMejorar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="@string/bMejorar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDinero" />

    <TextView
        android:id="@+id/tvRecordArbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="143dp"
        android:text="@string/tvRecod"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivArbol"
        app:layout_constraintTop_toBottomOf="@+id/ivDinero" />

    <TextView
        android:id="@+id/tvRecordDiablo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="@string/tvRecod"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivDiablo"
        app:layout_constraintTop_toBottomOf="@+id/ivArbol" />

    <TextView
        android:id="@+id/tvRecordZombie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="@string/tvRecod"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivZombie"
        app:layout_constraintTop_toBottomOf="@+id/ivDiablo" />

    <ImageView
        android:id="@+id/ivEspada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sword" />

</android.support.constraint.ConstraintLayout>