<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondov1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="351dp"
        android:layout_height="88dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titulo" />

    <Button
        android:id="@+id/bInstrucciones"
        android:layout_width="250dp"
        android:layout_height="241dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/instrucionesv3"
        android:onClick="mostrarInstrucciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/bIniciar"
        android:layout_width="297dp"
        android:layout_height="101dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/iniciar"
        android:onClick="iniciarJuego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bInstrucciones" />
</android.support.constraint.ConstraintLayout>